@model StoreOfBuild.Web.ViewModel.CategoryViewModel
@{
    ViewData["Title"] = "Category";
}
<br>
<br>
<div class="row header">
    <div class="col-md-12">
         <h3>Category</h3>   
         <a href="/Category" class="btn btn-primary">Back</a>
    </div>
</div>
<div class="row form-wrapper">
    <div class="col-md-12">
        <form id="form" class="form-horizontal" asp-action="CreateOrEdit" asp-controller="Category" asp-anti-forgery="true">
            <div class="form-group">
                <labe class="col-md-2 control-label">Name</labe>
                <div class="col-md-8">
                    <input class="form-control" asp-for="Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <button class="btn btn-success">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
}